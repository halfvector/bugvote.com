<div class="news--post">

	<div class="left-part">
		<div class="name">{{fullName}}</div>
		<!--<div class="age">{{createdAge}}</div>-->
		<time class="timeago" datetime="{{eventTimeIso8601}}">{{eventTime}}</time>
	</div>

	<a class="avatar-container" href="{{urlViewProfile}}">
		{{#isDeveloper}}
		<div class="developer-tag" title="this is the developer! say hi!">developer</div>
		{{/isDeveloper}}
		<img src="{{creatorImg}}" alt="" />
	</a>

	<div class="right-part">
		<h2><a href="{{suggestionUrl}}">{{title}}</a></h2>
		{{#isBugReport}}
			<div class="tag-bugreport">bug report</div>
		{{/isBugReport}}
		{{#isBugFix}}
			<div class="tag-bugfix">bug fix</div>
		{{/isBugFix}}
		{{#isUpdate}}
			<div class="tag-bugfix">update</div>
		{{/isUpdate}}
	</div>
</div>